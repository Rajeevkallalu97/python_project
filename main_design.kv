<Login>:
    username: username
    password: password

    MDCard:
        size_hint: None, None
        size: dp(520), dp(340)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        BoxLayout:
            orientation:'vertical'
            padding: dp(20)
            spacing:20

            Image:
                id: latrobe
                pos_hint: {'center_x': .5, 'center_y': .7}
                size: "10dp", "10dp"
                source: "./lat_logo.png"
            MDLabel:
                text: "Researcher Login"
                halign: 'center'
                pos_hint: {'center_x': 0.5, 'center_y': 0.55}

            MDTextField:
                id: username
                hint_text: "Username "
                helper_text_mode: "on_focus"

            MDTextField:
                id: password
                hint_text: "Password "
                helper_text_mode: "on_focus"
                password: True

            MDFlatButton:
                text: "Login"
                pos_hint: {'center_x': .5, 'center_y': .6}
                md_bg_color: app.theme_cls.primary_color
                elevation_normal: 12
                on_press: root.check(username.text, password.text)
                    
                    
                    
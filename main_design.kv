Screen:
    BoxLayout:
        canvas:
            Color:
                rgb: 0.2,0.33,0.54
            Rectangle:
                size: self.size
        orientation: 'vertical'
        

    MDToolbar:
        id : toolbar
        pos_hint: {"top": 1}
        title: "piSO2"
        elevation: 10
        icon: "folder"
        left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]
        right_action_items: [["location-exit", lambda x: app.stop()]]
        specific_text_color: 0,0,0,1
        md_bg_color: 255,255,255,1

    NavigationLayout:
        x: toolbar.height
        

        ScreenManagement:
            id: screen_manager

            FileSelection:
                name: "scr 1"

            Plot:
                name: "scr 2"
                
            Screen:
                name: "scr 3"

                MDLabel:
                    text: "Screen for showing saved data"
                    halign: "center"    

            Screen:
                name: "scr 4"

                MDLabel:
                    text: "Screen to show results"
                    halign: "center"

            Screen:
                name: "scr 5"

                MDLabel:
                    text: "Screen for file options"
                    halign: "center"
            
            Researcher:
                name: "scr 7"

                
            Login:
                id: s6
                name: "scr_6"

            FilePath:
                name: "file"
                
                
  
        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                id: content_drawer
                screen_manager: screen_manager
                nav_drawer: nav_drawer

<FilePath>:
    FileChooserIconView:
        id:filechooser
        size_hint: 0.9,0.9
        path: "/Users/sairajeevkallalu/Desktop/assignments/project 3A/screens"
        on_selection:
            root.selected(filechooser.path,filechooser.selection)
            root.manager.transition.direction = 'right'
            root.change('scr 1')

<FileSelection>:
    MDLabel:
        text: "Select Procedure File"
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y': 0.7}
        
    MDRoundFlatIconButton:
        text: "Open manager"
        icon: "folder"
        pos_hint: {'center_x': .5, 'center_y': .6}
        on_release: root.change('file')
    MDFlatButton:
        text: "Upload & Start"
        pos_hint: {'center_x': .5, 'center_y': .5}
        md_bg_color: app.theme_cls.primary_color
        elevation_normal: 12
        on_release: 
            root.getContents()
            root.transition()


<Plot>:
    MDLabel:
        text: "Please Select an Option to Plot"
        font_size: '30sp'
        pos_hint: {'center_x': 0.5, 'center_y': 0.76}
        halign: "center" 
    MDFlatButton:
        text: "Plot current vs time"
        pos_hint: {'center_x': .2, 'center_y': .6}
        md_bg_color: app.theme_cls.primary_color
        elevation_normal: 12
        on_release: 
            root.current = 1
            root.plot()
    MDFlatButton:
        text: "Plot current vs time modified"
        pos_hint: {'center_x': .5, 'center_y': .6}
        md_bg_color: app.theme_cls.primary_color
        elevation_normal: 12
        on_release: 
            root.current_modified = 1
            root.plot()
    MDFlatButton:
        text: "Plot Harmonic"
        pos_hint: {'center_x': .8, 'center_y': .6}
        md_bg_color: app.theme_cls.primary_color
        elevation_normal: 12
        on_release: 
            root.Harmonic = 1
            root.plot()
            


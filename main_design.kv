        height: "30dp"
        halign: 'center'
        pos_hint: {'center_x': 0.70, 'center_y': 0.45}
        hint_text: "44100 "

    
    MDLabel:
        text: "V's:"
        halign: 'center'
        pos_hint: {'center_x': 0.08, 'center_y': 0.35}

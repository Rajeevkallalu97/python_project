#: include navigation.kv

Screen:
    BoxLayout:
        canvas:
            Color:
                rgb: 0.2,0.33,0.54
            Rectangle:
                size: self.size
        orientation: 'vertical'
        

    MDToolbar:
        id : toolbar
        pos_hint: {"top": 1}
        title: "piSO2"
        elevation: 10
        icon: "folder"
        left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]
        right_action_items: [["location-exit", lambda x: app.stop()]]
        specific_text_color: 0,0,0,1
        md_bg_color: 255,255,255,1

    NavigationLayout:
        x: toolbar.height
        

        ScreenManagement:
            id: screen_manager

            Citizen:
                name: "scr 1"

            Plot:
                name: "scr 2"
                
            Screen:
                name: "scr 3"

                MDLabel:
                    text: "Screen for showing saved data"
                    halign: "center"    

            Results:
                id: result
                name: "scr 4"


            Screen:
                name: "scr 5"

                MDLabel:
                    text: "Screen for file options"
                    halign: "center"
            
            Researcher:
                name: "scr 7"

                
            Login:
                id: s6
                name: "scr_6"

            FilePath_Citizen:
                name: "file"

            FilePath_Researcher:
                name: "file_Researcher"    
                
  
        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                id: content_drawer
                screen_manager: screen_manager
                nav_drawer: nav_drawer
<Results>:
    MDLabel:
        id: test
        text: "Test"
        halign: "center"
    MDFlatButton:
        text: "Get Results"
        pos_hint: {'center_x': .5, 'center_y': .3}
        md_bg_color: app.theme_cls.primary_color
        elevation_normal: 12
        on_release: 
            root.get()
            
   

<FilePath_Citizen>:
    FileChooserIconView:
        id:filechooser
        size_hint: 0.9,0.9
        path: "./"
        on_selection:
            root.selected(filechooser.selection)
            root.manager.transition.direction = 'right'
            root.change('scr 1')

<FilePath_Researcher>:
    FileChooserIconView:
        id:filechooser
        size_hint: 0.9,0.9
        path: "./"
        on_selection:
            root.selected(filechooser.selection)
            root.manager.transition.direction = 'right'
            root.change('scr 7')

<Citizen>:
    MDLabel:
        text: "Select The File"
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y': 0.7}
        
    MDRoundFlatIconButton:
        text: "Open manager"
        icon: "folder"
        pos_hint: {'center_x': .5, 'center_y': .6}
        on_release: root.change('file')
    MDFlatButton:
        text: "Upload & Start"
        pos_hint: {'center_x': .5, 'center_y': .5}
        md_bg_color: app.theme_cls.primary_color
        elevation_normal: 12
        on_release: 
            root.getContents()
            root.transition()


<Plot>:
    MDLabel:
        text: "Please Select an Option to Plot"
        font_size: '30sp'
        pos_hint: {'center_x': 0.5, 'center_y': 0.8}
        halign: "center" 
    MDLabel:
        id: "path_label"
        text: root.path
        theme_text_color: "Custom"
        text_color: 1, 0.8, 0, 1
        pos_hint: {'center_x': 0.5, 'center_y': 0.72}
        halign: "center" 
    MDFlatButton:
        text: "Plot current vs time"
        pos_hint: {'center_x': .2, 'center_y': .6}
        md_bg_color: app.theme_cls.primary_color
        elevation_normal: 12
        on_release: 
            root.current = 1
            root.plot()
    MDFlatButton:
        text: "Plot current vs time modified"
        pos_hint: {'center_x': .5, 'center_y': .6}
        md_bg_color: app.theme_cls.primary_color
        elevation_normal: 12
        on_release: 
            root.current_modified = 1
            root.plot()
    MDFlatButton:
        text: "Plot Harmonic"
        pos_hint: {'center_x': .8, 'center_y': .6}
        md_bg_color: app.theme_cls.primary_color
        elevation_normal: 12
        on_release: 
            root.harmonic = 1
            root.plot()
            


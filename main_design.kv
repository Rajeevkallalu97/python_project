#: include navigation.kv

Screen:
    BoxLayout:
        canvas:
            Color:
                rgb: 0.2,0.33,0.54
            Rectangle:
                size: self.size
        orientation: 'vertical'
        

    MDToolbar:
        id : toolbar
        pos_hint: {"top": 1}
        title: "piSO2"
        elevation: 10
        icon: "folder"
        left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]
        right_action_items: [["location-exit", lambda x: app.stop()]]
        specific_text_color: 0,0,0,1
        md_bg_color: 255,255,255,1

    NavigationLayout:
        x: toolbar.height
        

        ScreenManagement:
            id: screen_manager

            Citizen:
                name: "scr 1"

            Plot:
                name: "scr 2"
                
            Results:
                id: result
                name: "scr 4"
            
            Researcher:
                name: "scr 7"

                
            Login:
                id: s6
                name: "scr_6"

            FilePath_Citizen:
                name: "file"
            
            FilePath_Plot:
                name: "file_plot"


            FilePath_Researcher:
                name: "file_Researcher"    
                
  
        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                id: content_drawer
                screen_manager: screen_manager
                nav_drawer: nav_drawer
<Results>:
    MDLabel:
        text: "Results"
        halign: 'center'
        font_size: 80
        pos_hint: {'center_x': .5, 'center_y': .75}
    MDLabel:
        text: "Peak Area = "
        halign: 'center'
        pos_hint: {'center_x': .35, 'center_y': .6}
    MDLabel:
        text: "Peak Height = "
        halign: 'center'
        pos_hint: {'center_x': .34, 'center_y': .5}
    MDLabel:
        text: "Absolute Peak Height = "
        halign: 'center'
        pos_hint: {'center_x': .3, 'center_y': .4}
    MDLabel:
        id: area
        text: "Please click on Get Results button"
        theme_text_color: "Custom"
        text_color: 1, 0.8, 0, 1
        halign: 'center'
        pos_hint: {'center_x': .6, 'center_y': .6}
    MDLabel:
        id: height
        text: "Please click on Get Results button"
        theme_text_color: "Custom"
        text_color: 1, 0.8, 0, 1
        halign: 'center'
        pos_hint: {'center_x': .6, 'center_y': .5}
    MDLabel:
        id: abs
        text: "Please click on Get Results button"
        theme_text_color: "Custom"
        text_color: 1, 0.8, 0, 1
        halign: 'center'
        pos_hint: {'center_x': .6, 'center_y': .4}
    MDLabel:
        id: calib
        text: "No Results to show"
        halign: 'center'
        pos_hint: {'center_x': .5, 'center_y': .2}
    MDFlatButton:
        text: "Get Results"
        pos_hint: {'center_x': .5, 'center_y': .3}
        md_bg_color: app.theme_cls.primary_color
        elevation_normal: 12
        on_release: 
            root.get()
            
   

<FilePath_Citizen>:
    FileChooserIconView:
        id:filechooser
        size_hint: 0.9,0.9
        path: "./"
        on_selection:
            root.selected(filechooser.selection)
            root.manager.transition.direction = 'right'
            root.change('scr 1')
<FilePath_Plot>:
    FileChooserIconView:
        id:filechooser
        size_hint: 0.9,0.9
        path: "./"
        on_selection:
            root.selected(filechooser.selection)
            root.manager.transition.direction = 'right'
            root.change('scr 2')

<FilePath_Researcher>:
    FileChooserIconView:
        id:filechooser
        size_hint: 0.9,0.9
        path: "./"
        on_selection:
            root.selected(filechooser.selection)
            root.manager.transition.direction = 'right'
            root.change('scr 7')

<Citizen>:
    MDLabel:
        text: "Select The File"
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y': 0.7}
        
    MDRoundFlatIconButton:
        text: "Open manager"
        icon: "folder"
        pos_hint: {'center_x': .5, 'center_y': .6}
        on_release: root.change('file')
    MDFlatButton:
        text: "Plot Graphs"
        pos_hint: {'center_x': .5, 'center_y': .5}
        md_bg_color: app.theme_cls.primary_color
        elevation_normal: 12
        on_release: 
            root.getContents()
            root.transition()


<Plot>:
    MDLabel:
        text: "Please Select Options to Plot"
        font_size: '30sp'
        pos_hint: {'center_x': 0.5, 'center_y': 0.8}
        halign: "center" 
    MDRoundFlatIconButton:
        text: "Open manager"
        icon: "folder"
        pos_hint: {'center_x': .5, 'center_y': .6}
        on_release: root.change('file_plot')
    MDFlatButton:
        text: "Plot Graphs"
        pos_hint: {'center_x': .5, 'center_y': .5}
        md_bg_color: app.theme_cls.primary_color
        elevation_normal: 12
        on_release: 
            root.getContents()
            root.plot()
    MDLabel:
        text: "Current"
        halign: 'center'
        pos_hint: {'center_x': 0.25, 'center_y': 0.7}
    MDCheckbox: 
        selected_color: 1, 0.8, 0, 1
        pos_hint: {'center_x': .2, 'center_y': .7}
        on_active: root.on_checkbox1_active(*args)
        size_hint: None, None
        size: "48dp", "48dp"
    MDLabel:
        text: "Current_modified"
        halign: 'center'
        pos_hint: {'center_x': 0.54, 'center_y': 0.7}
    MDCheckbox: 
        selected_color: 1, 0.8, 0, 1
        pos_hint: {'center_x': .45, 'center_y': .7}
        on_active: root.on_checkbox2_active(*args)
        size_hint: None, None
        size: "48dp", "48dp"
    MDLabel:
        text: "Harmonic"
        halign: 'center'
        pos_hint: {'center_x': 0.76, 'center_y': 0.7}
    MDCheckbox: 
        selected_color: 1, 0.8, 0, 1
        pos_hint: {'center_x': .7, 'center_y': .7}
        on_active: root.on_checkbox3_active(*args)
        size_hint: None, None
        size: "48dp", "48dp"
            

<Researcher>:
    
    MDLabel:
        text: "Select The File"
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y': 0.8}
        
    MDRoundFlatIconButton:
        text: "Open manager"
        icon: "folder"
        pos_hint: {'center_x': .5, 'center_y': .72}
